<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:id="@+id/album_btn_arrow_black"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_arrow_black"
        android:scaleType="fitXY"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/album_ic_my_like_off"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_my_like_off"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/album_btn_player_more"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_player_more"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/album_ic_my_like_off"
        app:layout_constraintTop_toTopOf="@+id/album_ic_my_like_off"
        app:layout_constraintStart_toEndOf="@+id/album_ic_my_like_off" />


    <TextView
        android:id="@+id/album_music_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="IU 5th Akbum 'LILAC'"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/album_btn_arrow_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/album_music_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="아이유(IU)"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/album_music_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/album_music_infomation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:text="2021.03.25|정규|댄스 팝"
        app:layout_constraintTop_toBottomOf="@+id/album_music_singer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/album_album_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img_album_exp2"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/album_music_infomation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/widget_black_play"
        app:layout_constraintBottom_toBottomOf="@+id/album_album_iv"
        app:layout_constraintEnd_toEndOf="@+id/album_album_iv" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="200dp"
        android:src="@drawable/img_album_lp"
        app:layout_constraintStart_toEndOf="@+id/album_album_iv"
        app:layout_constraintTop_toTopOf="@+id/album_album_iv"
        app:layout_constraintBottom_toBottomOf="@+id/album_album_iv" />




















</androidx.constraintlayout.widget.ConstraintLayout>