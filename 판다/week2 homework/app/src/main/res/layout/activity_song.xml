<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">





            <ImageView
                android:id="@+id/btn_palyer_setting"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/btn_player_setting"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btn_player_eq_off"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/btn_player_eq_off"
                app:layout_constraintBottom_toBottomOf="@id/btn_palyer_setting"
                app:layout_constraintStart_toEndOf="@+id/btn_palyer_setting"
                app:layout_constraintTop_toTopOf="@id/btn_palyer_setting"/>



            <ImageButton
                android:id="@+id/song_down_ib"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@color/white"
                android:scaleType="fitXY"
                android:layout_marginEnd="10dp"
                android:src="@drawable/nugu_btn_down"
                app:layout_constraintBottom_toBottomOf="@+id/btn_player_eq_off"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btn_player_eq_off" />


            <ImageView
                android:id="@+id/btn_player_more"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/btn_player_more"
                app:layout_constraintTop_toBottomOf="@+id/song_down_ib"
                app:layout_constraintStart_toStartOf="@+id/song_down_ib"
                app:layout_constraintEnd_toEndOf="@+id/song_down_ib" />
    
    
            <TextView
                android:id="@+id/song_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="라일락"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_player_more"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/song_singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이유 (IU)"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/song_title"
                app:layout_constraintStart_toStartOf="@+id/song_title"
                app:layout_constraintEnd_toEndOf="@+id/song_title" />

            <ImageView
                android:id="@+id/song_btn_arrow_more"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/btn_arrow_more"
                app:layout_constraintStart_toEndOf="@+id/song_singer"
                app:layout_constraintBottom_toBottomOf="@+id/song_singer"
                app:layout_constraintTop_toTopOf="@+id/song_singer" />

            <ImageView
                android:id="@+id/home_album_img_iu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_album_exp2"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/song_btn_arrow_more"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />



    <TextView
        android:id="@+id/song_lyrics_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나라는 꽃가루에"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/home_album_img_iu"
        app:layout_constraintStart_toStartOf="@+id/home_album_img_iu"
        app:layout_constraintEnd_toEndOf="@+id/home_album_img_iu" />

    <TextView
        android:id="@+id/song_lyrics_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="눈이 따끔해 아야"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/song_lyrics_01"
        app:layout_constraintStart_toStartOf="@+id/song_lyrics_01"
        app:layout_constraintEnd_toEndOf="@+id/song_lyrics_01" />

    <ImageView
        android:id="@+id/ic_my_like_off"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_my_like_off"
        app:layout_constraintTop_toBottomOf="@+id/song_lyrics_02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/btn_player_unlike_off"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/btn_player_unlike_off"
        app:layout_constraintTop_toBottomOf="@+id/song_lyrics_02"
        app:layout_constraintStart_toEndOf="@+id/ic_my_like_off"
        app:layout_constraintBottom_toBottomOf="@+id/ic_my_like_off" />

    <!--시크바 -->
    <SeekBar
        android:id="@+id/seekbar_01"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:max="100"
        app:layout_constraintTop_toBottomOf="@+id/ic_my_like_off" />

    <!--시크바 시작 시간 -->
    <TextView
        android:id="@+id/start_time"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:text="00:00"
        android:layout_marginStart="10dp"
        android:textColor="@color/neon_Blue"
        app:layout_constraintTop_toBottomOf="@+id/seekbar_01"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 시크바 끝나는 시간 -->
    <TextView
        android:id="@+id/complete_time"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:text="00:00"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/seekbar_01"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!--반복 버튼 -->
    <ImageView
        android:id="@+id/nugu_btn_repeat_inactive"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/nugu_btn_repeat_inactive"
        app:layout_constraintEnd_toStartOf="@+id/song_player_layout"
        app:layout_constraintTop_toTopOf="@+id/song_player_layout"
        app:layout_constraintBottom_toBottomOf="@+id/song_player_layout" />


     <!--자동재생 버튼 -->
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/nugu_btn_random_inactive"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@+id/song_player_layout"
        app:layout_constraintTop_toTopOf="@+id/song_player_layout"
        app:layout_constraintBottom_toBottomOf="@+id/song_player_layout" />



    <LinearLayout
        android:id="@+id/song_player_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toTopOf="@+id/related_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekbar_01" >

        <ImageView
            android:id="@+id/song_previous_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/nugu_btn_skip_previous_32"/>

        <ImageView
            android:id="@+id/song_miniplayer_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_miniplayer_play" />

        <ImageView
            android:id="@+id/song_pause_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_miniplay_mvpause"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/song_next_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/nugu_btn_skip_next_32" />



    </LinearLayout>


<ImageView
    android:id="@+id/instagram_button"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginTop="40dp"
    android:layout_marginStart="20dp"
    android:src="@drawable/btn_actionbar_instagram"
    app:layout_constraintTop_toBottomOf="@+id/song_player_layout"
    app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/related_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/btn_player_related"
        app:layout_constraintTop_toBottomOf="@+id/song_player_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_miniplayer_go_list"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/song_player_layout"
        app:layout_constraintEnd_toEndOf="parent" />


















</androidx.constraintlayout.widget.ConstraintLayout>