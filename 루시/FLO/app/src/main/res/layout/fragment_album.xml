<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<ImageView
    android:id="@+id/album_btn_arrow_black_iv"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginTop="40dp"
    android:layout_marginStart="20dp"
    android:src="@drawable/btn_arrow_black"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
    

    <ImageView
        android:id="@+id/album_ic_my_like_off_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_my_like_off"
        app:layout_constraintEnd_toStartOf="@id/album_btn_player_more_iv"
        app:layout_constraintTop_toTopOf="@id/album_btn_arrow_black_iv"/>

    <ImageView
        android:id="@+id/album_btn_player_more_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/btn_player_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/album_btn_arrow_black_iv"
        
        />

    <TextView
        android:id="@+id/album_album_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="IU 5th Album 'LILAC'"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/album_btn_arrow_black_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/album_album_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="아이유 (IU)"
        app:layout_constraintTop_toBottomOf="@id/album_album_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/album_album_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="2021.03.25 | 정규 | 댄스 팝"
        app:layout_constraintTop_toBottomOf="@id/album_album_singer_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <ImageView
        android:id="@+id/album_album_img_exp_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_album_exp2"
        app:layout_constraintTop_toBottomOf="@id/album_album_info_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/widget_black_play"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintEnd_toEndOf="@id/album_album_img_exp_iv"
        app:layout_constraintBottom_toBottomOf="@id/album_album_img_exp_iv"/>




    <ImageView
        android:id="@+id/album_img_album_lp_iv"
        android:layout_width="40dp"
        android:layout_height="200dp"
        android:layout_marginStart="-2dp"
        android:src="@drawable/img_album_lp"
        app:layout_constraintStart_toEndOf="@id/album_album_img_exp_iv"
        app:layout_constraintTop_toTopOf="@id/album_album_img_exp_iv"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/album_content_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorColor="@color/flo"
        app:tabSelectedTextColor="@color/flo"
        app:tabRippleColor="#00ff0000"
        app:layout_constraintEnd_toEndOf="@id/album_album_img_exp_iv"
        app:layout_constraintStart_toStartOf="@id/album_album_img_exp_iv"
        app:layout_constraintTop_toBottomOf="@id/album_album_img_exp_iv"/>

<!--    0dp 의 사용법-->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/album_content_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/album_content_tb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>

