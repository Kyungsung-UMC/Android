<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/looker_main_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보관함"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/looker_main_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginEnd="20dp"
        android:text="로그인"
        android:textColor="@color/flo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/looker_main_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/looker_main_title_tv"
        />



    <com.google.android.material.tabs.TabLayout
        android:id="@+id/looker_content_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/flo"
        app:tabSelectedTextColor="@color/flo"
        app:tabIndicatorFullWidth="false"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:tabMode="scrollable"
        app:tabRippleColor="#00ff0000"
        app:layout_constraintTop_toBottomOf="@id/looker_main_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:tabTextAppearance="@style/tabTextBold"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/looker_content_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/looker_content_tb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>