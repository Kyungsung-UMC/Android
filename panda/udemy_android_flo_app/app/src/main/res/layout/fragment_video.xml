<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">




        <ImageView
            android:id="@+id/video_video_01"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/img_video_exp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/video_title_mv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[MV]라일락(LILAC)"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/video_video_01"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/video_singer_date_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이유(IU)|2021.03.25"
            android:textColor="@color/gray_color"
            android:textSize="15sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/video_title_mv_01"
            app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>