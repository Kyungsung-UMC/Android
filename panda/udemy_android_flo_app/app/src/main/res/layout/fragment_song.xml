            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/song_mix_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_background_radius"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingStart="20dp"
                android:paddingTop="5dp"
                android:paddingEnd="20dp"
                android:paddingBottom="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

                <TextView
                    android:id="@+id/song_mix_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내 취향 MIX"
                    android:layout_gravity="center"
                    android:textColor="@color/black" />


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:src="@drawable/btn_toggle_off"
                    android:layout_gravity="center" />


            </LinearLayout>


            <ImageView
                android:id="@+id/look_btn_playlist_select_off"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/btn_playlist_select_off"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/song_mix_layout"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/album_select_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="전체선택"
                app:layout_constraintStart_toEndOf="@+id/look_btn_playlist_select_off"
                app:layout_constraintTop_toTopOf="@+id/look_btn_playlist_select_off"
                app:layout_constraintBottom_toBottomOf="@+id/look_btn_playlist_select_off" />

            <ImageView
                android:id="@+id/look_icon_browse_arrow_right"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_browse_arrow_right"
                app:layout_constraintTop_toTopOf="@+id/look_select_listen"
                app:layout_constraintBottom_toBottomOf="@+id/look_select_listen"
                app:layout_constraintEnd_toStartOf="@+id/look_select_listen"/>


            <TextView
