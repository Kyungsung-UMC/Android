<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/look_big_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="둘러보기"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <HorizontalScrollView
            android:id="@+id/look_chip_scroll_hs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:scrollbars="none"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/look_big_title_tv">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/look_chip_title_01_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="차트"
                    android:textColor="@color/white"
                    android:layout_marginVertical="8dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/fragment_look_chip_on_background"/>


                <TextView
                    android:id="@+id/look_chip_title_02_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="영상"
                    android:layout_marginVertical="8dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="#7D7D7D"
                    android:background="@drawable/fragment_look_chip_off_background" />

                <TextView
                    android:id="@+id/look_chip_title_03_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="장르"
                    android:layout_marginVertical="8dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="#7D7D7D"
                    android:background="@drawable/fragment_look_chip_off_background" />

                <TextView
                    android:id="@+id/look_chip_title_04_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상황"
                    android:layout_marginVertical="8dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="#7D7D7D"
                    android:background="@drawable/fragment_look_chip_off_background" />

                <TextView
                    android:id="@+id/look_chip_title_05_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="분위기"
                    android:layout_marginVertical="8dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="#7D7D7D"
                    android:background="@drawable/fragment_look_chip_off_background" />

                <TextView
                    android:id="@+id/look_chip_title_06_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이것저것"
                    android:layout_marginVertical="8dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="#7D7D7D"
                    android:background="@drawable/fragment_look_chip_off_background" />


            </LinearLayout>


        </HorizontalScrollView>


        <TextView
            android:id="@+id/look_sub_title_chart_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="차트"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/look_chip_scroll_hs"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/look_sub_title_arrow_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/btn_main_arrow_more"
            app:layout_constraintStart_toEndOf="@+id/look_sub_title_chart_iv"
            app:layout_constraintTop_toTopOf="@+id/look_sub_title_chart_iv"
            app:layout_constraintBottom_toBottomOf="@+id/look_sub_title_chart_iv" />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/look_chart_total_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/fragment_look_chart_background"
            app:layout_constraintTop_toBottomOf="@+id/look_sub_title_chart_iv">


            <TextView
                android:id="@+id/look_chart_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="FLO 차트"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            
            <TextView
                android:id="@+id/look_chart_title_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19시 기준"
                android:textSize="12sp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@+id/look_chart_title_tv"
                app:layout_constraintTop_toTopOf="@+id/look_chart_title_tv"
                app:layout_constraintBottom_toBottomOf="@+id/look_chart_title_tv" />


            <TextView
                android:id="@+id/look_chart_sub_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최근 24시간 집계,FLO 최고 인기곡 차트!"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toBottomOf="@+id/look_chart_title_tv"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/look_chart_listen_all_iv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_browse_arrow_right"
                android:layout_marginEnd="3dp"
                app:layout_constraintEnd_toStartOf="@+id/look_chart_listen_all_tv"
                app:layout_constraintBottom_toBottomOf="@+id/look_chart_listen_all_tv"
                app:layout_constraintTop_toTopOf="@+id/look_chart_listen_all_tv" />

            <TextView
                android:id="@+id/look_chart_listen_all_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체듣기"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/look_img_album_exp2_01"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img_album_exp2"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toBottomOf="@+id/look_chart_sub_title_tv"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/look_number_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@+id/look_img_album_exp2_01"
                app:layout_constraintTop_toTopOf="@+id/look_img_album_exp2_01"
                app:layout_constraintBottom_toBottomOf="@+id/look_img_album_exp2_01" />

            <TextView
                android:id="@+id/look_singer_name_title_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="잠이 안온다\n젠(zen)"
                android:textSize="13sp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@+id/look_number_01"
                app:layout_constraintTop_toTopOf="@+id/look_number_01"
                app:layout_constraintBottom_toBottomOf="@+id/look_number_01" />


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_miniplayer_play"
                android:layout_marginStart="300dp"
                app:layout_constraintStart_toEndOf="@+id/look_singer_name_title_01"
                app:layout_constraintTop_toTopOf="@+id/look_singer_name_title_01"
                app:layout_constraintBottom_toBottomOf="@+id/look_singer_name_title_01"
                app:layout_constraintEnd_toEndOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>



        <TextView
            android:id="@+id/look_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영상"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/look_chart_total_cl"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/look_sub_title_arrow_iv_02"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/btn_main_arrow_more"
            app:layout_constraintStart_toEndOf="@+id/look_video"
            app:layout_constraintTop_toTopOf="@+id/look_video"
            app:layout_constraintBottom_toBottomOf="@+id/look_video" />

        <ImageView
            android:id="@+id/look_img_video_exp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_video_exp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/look_video" />

        <TextView
            android:id="@+id/look_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="25dp"
            app:layout_constraintTop_toBottomOf="@+id/look_img_video_exp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/look_singer_video_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가수"
            android:textSize="14sp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/look_video_title"
            app:layout_constraintStart_toStartOf="parent" />

        <HorizontalScrollView
            android:id="@+id/look_video_music_hs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/look_singer_video_name" >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">



                        <ImageView
                            android:id="@+id/look_video_music_album_img_01_iv"
                            android:layout_width="300dp"
                            android:layout_height="170dp"
                            android:src="@drawable/img_video_exp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/look_video_music_album_title_01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="제목"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            app:layout_constraintTop_toBottomOf="@+id/look_video_music_album_img_01_iv"
                            app:layout_constraintStart_toStartOf="parent" />


                        <TextView
                            android:id="@+id/look_video_music_album_singer_01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가수"
                            android:textSize="14sp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            app:layout_constraintTop_toBottomOf="@+id/look_video_music_album_title_01"
                            app:layout_constraintStart_toStartOf="parent" />




                    </androidx.constraintlayout.widget.ConstraintLayout>




                </LinearLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp">



                    <ImageView
                        android:id="@+id/look_video_music_album_img_02_iv"
                        android:layout_width="300dp"
                        android:layout_height="170dp"
                        android:src="@drawable/img_video_exp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/look_video_music_album_title_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="제목"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/look_video_music_album_img_02_iv"
                        app:layout_constraintStart_toStartOf="parent" />


                    <TextView
                        android:id="@+id/look_video_music_album_singer_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가수"
                        android:textSize="14sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/look_video_music_album_title_02"
                        app:layout_constraintStart_toStartOf="parent" />



                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/look_Genre_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장르"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/look_video_music_hs"
            app:layout_constraintStart_toStartOf="parent" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:columnCount="1"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/look_Genre_title">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:id="@+id/look_jenre_img_01_iv"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:src="@drawable/img_jenre_exp_1"
                    android:layout_marginEnd="5dp" />















            </LinearLayout>



        </GridLayout>







    </androidx.constraintlayout.widget.ConstraintLayout>





</ScrollView>